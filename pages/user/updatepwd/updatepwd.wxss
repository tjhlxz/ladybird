.pwd_container{
    display: flex;
    flex-direction: column;
    align-items: center;
    font-size: 35rpx;
    font-family: Mricrosoft Yahei;
    color:#222;
}
.list_container{
    margin-left: 40rpx;
    height: 100rpx;
    display: flex;
    flex-direction: row;
}
.name{
    margin-top: 30rpx;
    color: #0AB179;
    font-size: 55rpx;
}
form{
    margin-top: 80rpx;
}
.title{ 
    width: 200rpx;
}
input{
    width: 450rpx;
    padding-left: 20rpx;
    font-size: 30rpx;
    border-bottom: 1rpx solid #f2f2f2;
}
input:hover{
    height: 30rpx;
    width: 450rpx;
    padding-left: 20rpx;
    font-size: 30rpx;
    border-bottom: 1rpx solid #0AB179;
}
button{
    background-color: #0AB179;
    color: #fff;
    border-radius: 0;
    margin-top: 40rpx;
}
.desc{
    margin-top: 0rpx;
    font-size: 30rpx;
    color: #666;
    padding:0 30rpx;
}