.main {
    width: 100%;
    height: 100%;
    color: #222;
}

.header {
    display: flex;
    align-items: center;
    width: 100%;
    height: 300rpx;
    flex-direction: column;
}

.header image {
    width: 100rpx;
    height: 100rpx;
}

.title_header {
    margin-top: 100rpx;
    font-size: 65rpx;
    font-family: Microsoft Yahei;
    font-weight: 700;
    color: #0ab179;
}

.main .nav {
    width: 100%;
    height: 200rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    margin-bottom: 40rpx;
}

.nav_item {
    height: 100%;
    display: flex;
    flex: 1;
    flex-direction: column;
    align-items: center;
}

.main .nav .nav_item {
    margin: auto 64rpx;
}

.red_point_box {
  width: 100%;
  height: 100%;
  position: relative;
  text-align: center;
}
.red_point {
  position: absolute;
  width: 40rpx;
  height: 40rpx;
  font-size: 25rpx;
  background-color: red;
  color: #fff;
  border-radius: 50%;
  right: -25%;
  /* top: -25%; */
  line-height: 40rpx;
}

.main .nav .nav_item .nav_item_text {
    font-size: 30rpx;
    margin-top: 15rpx;
}

.main .contant {
    height: 100%;
    width: 100%;
}

.main .contant .title {
    border-top: 20rpx solid #f2f2f2;
    height: 100rpx;
    line-height: 100rpx;
    font-size: 32rpx;
}

.main .contant .title_text {
    padding-left: 26rpx;
    width: 95%;
    margin: 0 auto;
    border-bottom: 1rpx solid #ccc;
}

.main .contant .contant_list {
    width: 100%;
    height: 100%;
    display: flex;
    justify-content: center;
    align-content: center;
    font-size: 28rpx;
}

.main .contant .contant_list .contant_name {
    padding: 22rpx;
    flex:1;
}

.main .contant .contant_list .contant_people {
    padding: 22rpx;
    flex:1;
}

.main .contant .contant_list .contant_date {
  padding: 22rpx;
  flex: 1;
}

.logo image {
    width: 80rpx;
    height: 80rpx;
}
