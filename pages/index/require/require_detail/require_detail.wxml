<view class='container'>
  <view class='main'>
    <view class='staff'>
      <view class='staff_name'>{{form.form_proposer_name}}的审批表</view>
      <view class='staff_state'>{{form.form_status}}</view>
    </view>
    <view class='table'>
      <view class='tr'>
        <view class='td title'>所在学院</view>
        <view class='td title'>申请人</view>
        <view class='td title'>申请日期</view>
        <view class='td title'>申请课程</view>
        <view class='td title'>调整前</view>
        <view class='td title'>调整后</view>
      </view>
      <view class='tr'>
        <view class='td'>{{form.form_college}}</view>
        <view class='td'>{{form.form_proposer_name}}</view>
        <view class='td'>{{form.create_time}}</view>
        <view class='td'>{{form.form_course}}</view>
        <view class='td dd'>{{form.form_before_adjust}}</view>
        <view class='td dd'>{{form.form_later_adjust}}</view>
      </view>
    </view>
  </view>
  <view class='footer'>
    <view class='footer_contant table' wx:for='{{staff}}' wx:key=''>
      <view class='form_name tr'>{{item.staff_name}}</view>
      <view class='form_state tr'>{{item.staff_state}}</view>
      <view class='form_date tr'>{{item.staff_update}}</view>
    </view>
  </view>
</view>