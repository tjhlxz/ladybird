.model_detail_container {
    display: flex;
    flex-direction: column;
    background-color: #f4f4f4;
}
text {
    color: #222;
}
.staff_info{
    margin-top: 30rpx;
    color: red;
}
.level_detail{
    font-size: 30rpx;
    color: #666;
}
.head_status view{
    font-size: 35rpx;
    margin-left: 140rpx;
}
.ing{
    color: #1090ff;
}
.ok{
    color: #0ab179;
}
.fail{
    color: red;
}
.model_detail_head {
    background-color: #fff;
    display: flex;
    flex-direction: column;
    height: 100%;
    padding-top: 10rpx;
    padding-bottom: 30rpx;
}
.head_title view{
    height: 90rpx;
    line-height: 90rpx;
    text-align: center;
    margin-left: 20rpx;
}
.head_title{
    display: flex;
    flex-direction: row;
    height: 90rpx;
    line-height: 90rpx;
    text-align: center;
}
.model_detail_head image {
    margin-left: 30rpx;
    width: 90rpx;
    height: 90rpx;
}

.model_detail_head text {
    margin-left: 20rpx;
    font-size: 40rpx;
}

.model_form_container {
    background-color: #fff;
    margin: 30rpx 30rpx 100rpx 30rpx;
    border-radius: 10rpx;
    padding: 30rpx 20rpx;
    box-shadow: 2px 4px 8px 4px rgba(0, 0, 0, 0.20);
}

.form_border {
    border: 1rpx solid #e6e6e6;
    background-color: #f4f4f4;
}

.model_column {
    background-color: #fff;
    padding: 25rpx 15rpx;
    margin-bottom: 15rpx;
    font-size: 32rpx;
}

.describe {
    margin-left: 20rpx;
    font-size: 25rpx;
    color: rgba(0, 0, 0, 0.4);
}

.right {
    float: right;
}

.last {
    margin-bottom: 0rpx;
}

radio {
    margin-left: 20rpx;
}

.picker_value {
    color: #222;
}

.class_input {
    flex-direction: column;
}

.input {
    width: 600rpx;
    color: #222;
    margin-top: 15rpx;
    font-size: 35rpx;
}

.date {
    display: flex;
    flex-direction: column;
}
.date_text{
    margin-top: 30rpx;
    color: #666;
    font-size: 30rpx;
}
.date_after_text {
    float: right;
    margin-right: 80rpx;
}

.date_before_text {
    margin-left: 80rpx;
}

.reason_input {
    margin-top: 20rpx;
    font-size: 35rpx;
    height: 100%;
    width: 100%;
    color: #666;
    font-family: MicroSoft Yahei;
}
.change_ico{
    height: 50rpx;
    width: 60rpx;
}
.date_detail{
    display: flex;
    flex-direction: row;
    font-size: 25rpx;
    height: 50rpx;
    line-height: 50rpx;
    text-align: center;
    margin-top: 20rpx;
}
.date_detail view{
    width: 300rpx;
    color: #222;
    border-bottom: 1rpx solid #0ab179;
}
.submit {
    display: absolute;
    bottom: 0;
    left: 0;
    opacity: 1;
    border-radius: 0;
    background-color: #0ab179;
    color: #fff;
    border: #0ab179;
    width: 100%;
}
.form_head_status{
    font-size: 35rpx;
}


.image_picker {
    margin-top: 30rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    height: 70rpx;
    line-height: 80rpx;
    background-color: rgba(10, 177, 121, 0.8);
    border-radius: 50rpx;
}

.xian {
    width: 3rpx;
    height: 40rpx;
    background-color: #fff;
    border-radius: 1rpx;
}
.my_reason{
    width: 100%;
    height: 200rpx;
    margin-top: 20rpx;
}
.submit {
    display: absolute;
    bottom: 0;
    left: 0;
    opacity: 1;
    background-color: #0ab179;
    color: #fff;
    border: #0ab179;
    width: 100%;
}
.refuse{
    display: absolute;
    bottom: 0;
    left: 0;
    opacity: 1;
    background-color: rgb(248,248,248);
    width: 100%;
}
.button{
    background-color: #fff;
}

.container {
  width: 100%;
  height: 100%;
  font-size: 36rpx;
}
.container .table {
  width: 90%;
  margin: 0 auto;
  display: flex;
  justify-content: center;
  align-content: center;
}
.container .table .tr {
  flex: 1;
}
.container .table .td {
  flex: 1;
  padding: 16rpx 0;
}
.container .table .tr .dd {
  font-size: 34rpx;
}
.container .footer {
  width: 100%;
  height: 100%;
  margin: 0 auto;
  background-color: #fff;
}
.container .footer .form_name {
  margin: 36rpx auto 30rpx 10rpx;
  font-size: 34rpx;
}
.container .footer .form_state {
  margin: 36rpx auto 30rpx auto;
}
.container .footer .form_date {
  margin: 40rpx auto 34rpx auto;
  font-size: 34rpx;
  color: #B6B6B6;
}