.model_detail_container {
    display: flex;
    flex-direction: column;
    background-color: #f4f4f4;
}

text {
    color: #222;
}

.model_detail_head {
    background-color: #fff;
    display: flex;
    flex: row;
    height: 100rpx;
    padding-top: 10rpx;
    padding-bottom: 10rpx;
    align-items: center;
}

.model_detail_head image {
    margin-left: 30rpx;
    width: 90rpx;
    height: 90rpx;
}

.model_detail_head text {
    margin-left: 20rpx;
    font-size: 40rpx;
}

.model_form_container {
    background-color: #fff;
    margin: 30rpx 30rpx 140rpx 30rpx;
    border-radius: 10rpx;
    padding: 30rpx 20rpx;
    box-shadow: 2px 4px 8px 4px rgba(0, 0, 0, 0.20);
}

.form_border {
    border: 1rpx solid #e6e6e6;
    background-color: #f4f4f4;
}

.model_column {
    background-color: #fff;
    padding: 25rpx 15rpx;
    margin-bottom: 15rpx;
    font-size: 32rpx;
}

.describe {
    margin-left: 20rpx;
    font-size: 25rpx;
    color: rgba(0, 0, 0, 0.4);
}

.right {
    float: right;
}

.last {
    margin-bottom: 0rpx;
}

radio {
    margin-left: 20rpx;
}

.picker_value {
    color: #222;
}

.class_input {
    flex-direction: column;
}

input {
    width: 600rpx;
    color: #222;
    margin-top: 15rpx;
    font-size: 35rpx;
}

.date {
    display: flex;
    flex-direction: column;
}

.date_after_text {
    float: right;
    margin-right: 80rpx;
}

.date_before_text {
    margin-left: 80rpx;
}

.reason-input {
    margin-top: 20rpx;
    font-size: 35rpx;
    height: 400rpx;
    color: #222;
    z-index:-1;
    font-family: MicroSoft Yahei
}

.submit {
    display: absolute;
    bottom: 0;
    left: 0;
    opacity: 1;
    border-radius: 0;
    background-color: #0ab179;
    color: #fff;
    border: #0ab179;
    width: 100%;
}

.image_picker {
    margin-top: 30rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    height: 70rpx;
    line-height: 80rpx;
    background-color: rgba(10, 177, 121, 0.8);
    border-radius: 50rpx;
}

.xian {
    width: 3rpx;
    height: 40rpx;
    background-color: #fff;
    border-radius: 1rpx;
}

.image_picker text {
    display: block;
    height: 80rpx;
    width: 300rpx;
    color: #fff;
    line-height: 80rpx;
    text-align: center;
    font-size: 35rpx;
}