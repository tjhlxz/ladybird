}
.red_point_box {
  width: 100%;
  height: 100%;
  position: relative;
  text-align: center;
}
.red_point {
  position: absolute;
  width: 40rpx;
  height: 40rpx;
  font-size: 25rpx;
  background-color: red;
  color: #fff;
  border-radius: 50%;
  right: -25%;
  /* top: -25%; */
  line-height: 40rpx;
}
