.main .nav {
    width: 100%;
    height: 200rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    margin-bottom: 20rpx;
    margin-top: 20rpx;
}

.nav_item {
    height: 100%;
