/* 弹窗效果 */
.true{
    position: fixed;
    overflow: hidden;
    width: 100%;
}
.refuse_modal_mask {
    position: fixed;
    width: 100%;
    height: 100%;
    top: 0px;
    background: rgba(0, 0, 0, 0.2);
    overflow: hidden;
}
.refuse_modal_container{
    position: fixed;
    width: 90%;
    top: 20%;
    left: 5%;
    overflow: hidden;
    border-radius: 20rpx;
    background-color: #fff;
    border: 1rpx solid #f2f2f2;
}
.refuse_modal_form{
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 20rpx 20rpx;
}
.refuse_modal_text{
    font-weight: 700;
    color: #0ab179;
    font-size: 38rpx;
    margin-bottom: 10rpx;
}
.refuse_modal_reason{
    width: 96%;
    padding: 10rpx 10rpx;
    height: 100%;
    border: 1rpx solid #f2f2f2;
    border-radius: 20rpx;
}
.reason_input{
    width: 100%;
    height: 100%;
}
.refuse_modal_button{
    display: flex;
    width: 100%;
}
.refuse_modal_button button{
    margin-top: 30rpx;
    height: 80rpx;
    width: 150rpx;
    margin-left: 15%;
    margin-right: 5%;
    font-size: 36rpx;
    line-height: 80rpx;
    text-align: center;
}
.refuse_modal_confirm{
    background-color: #0ab179;
    color: #fff;
}
.refuse_modal_cancel{
    background-color: #fff;
    color: #666;
}
