<view class='wrapper'>
  <view class='title'>
    <text>登录</text>
  </view>
  <view class='content'>
    <view class='username'>
      <label for='username' class='username_label'>教工号</label>
      <input name='username' class='user_inp' bindinput='usernameInput'></input>
    </view>
    <view class='password'>
      <label for='password' class='password_label'>密码</label>
      <input name='password' class='pass_inp' bindinput='passwordInput'></input>
    </view>
    <button class='btn' bindtap='click'>登录</button>
  </view>
  <view class='footer'>
      <label class='footer_label' bindtap='bindTap'>忘记密码</label>
  </view>
</view>